<%- include("partials/header") -%>
    <h1>Compose</h1>
    <form action="/compose" method="POST">
        <div class="form-group">
            <label>Title</label>
            <input type="text" class="form-control" placeholder="Write the title of your post." name="post_title">
            <small class="form-text text-muted">Write unique post name.</small>
        </div>
        <div class="form-group">
            <label>Post</label>
            <textarea class="form-control" placeholder="Write the text of your post." rows="5" name="post_text"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Publish</button>
    </form>
<%- include("partials/footer") -%>